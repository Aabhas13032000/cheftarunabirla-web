<body>

<br><br>

<%if(message == 'success'){%>
<div class="alert <%=messageClass%>" role="alert" style="width: 50%;margin: auto">
    <h3>Your Payment Is successful!</h3>
</div>
<br>
<!-- <p>Redirecting you to the Home Page..</p> -->
<%}%>

<%if(message == 'failed'){%>
<div class="alert <%=messageClass%>" role="alert" style="width: 50%;margin: auto">
    <h3>Your Payment Failed!</h3>
</div>
<br>
<!-- <a href="/subscription">Please Retry</a> -->
<%}%>

<input type="hidden" name="" id="message" value="<%=message%>">
<!-- Bootstrap Javascript Plugins -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
<!---->

<!-- Iconify script -->
<script src="https://code.iconify.design/1/1.0.6/iconify.min.js"></script>
<!---->

<!-- javascript files -->
<script>
    var message = document.getElementById('message').value;

    if(message == 'success'){
        setTimeout(function (){
            window.location.href = '/subscription_successfull';
        },2000)
    }
</script>
<!---->

